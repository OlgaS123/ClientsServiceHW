<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Client UPD</title>
</head>

<body>
<div id="clientForm">
    {{#client}}
    <form method="post" action="clientUpdateForm">
        <input type="hidden" name="id" value="{{id}}">
        <input type="text" placeholder="Name" name="name" value="{{name}}">
        <input type="text" placeholder="Surname" name="surname" value="{{surname}}">
        <input type="date" name="birthday" min="1900-01-01" value="{{birthday}}">
        <select name="gender" id="gender">
            {{#genderValues}}
                <option value="{{key}}" {{value}}>{{key}}</option>
            {{/genderValues}}
        </select>
        <input type="text" placeholder="Email" name="email"  value="{{email}}">
        <input type="submit" value="SAVE" id="submitBtn">
    </form>
    {{/client}}
</div>

</body>
</html>